                                source,     "del_button";
                                action,     STATE_SET "default" 0.0;
                                transition, DECELERATE 0.25;
                                target,     "del_button";
                        }

                        program {
                                name,       "del_signal";
                                signal,     "mouse,up,1";
                                source,     "del_button";
                                action,     SIGNAL_EMIT "PLAYLIST_DEL" "del_button";
                        }

                        program {
                                name,       "edit_click";
                                signal,     "mouse,down,1";
                                source,     "edit_button";
                                action,     STATE_SET "clicked" 0.0;
                                transition, LINEAR 0.0;
